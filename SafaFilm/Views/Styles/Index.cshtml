@model IEnumerable<SafaFilm.Models.Styles>

@{
    ViewBag.Title = "لیست سبک فیلم";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("جدید", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <table>
                <tr>
                    <td>
                        <h1>
                            @item.Title
                        </h1>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.ActionLink("ویرایش", "Edit", new { id = item.StyleID }) |
                        @Html.ActionLink("نمایش", "Details", new { id = item.StyleID }) |
                        @Html.ActionLink("حذف", "Delete", new { id = item.StyleID })
                    </td>
                </tr>
            </table>
        </div>
    }
</div>

